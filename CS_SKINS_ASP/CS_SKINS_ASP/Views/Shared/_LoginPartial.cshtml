@using Microsoft.AspNet.Identity
<ul class="nav navbar-nav navbar-right">
    <li>
        <form id="formLang" method="post" role="form" class="form-inline" style="line-height: 50px;">
            <select id="selectLang" class="form-control" name="lang">
                <option value="fr-CA" @(Culture == "fr-CA" ? "selected=\"selected\"" : "")>fr</option>
                <option value="en-US" @(Culture == "en-US" ? "selected=\"selected\"" : "")>en</option>
            </select>
        </form>
    </li>
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm(CS_SKINS_ASP.Views.Shared.ResourceShared.SeDeconnecter, "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink(CS_SKINS_ASP.Views.Shared.ResourceShared.Bonjours + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        }
    }
    else
    {
        <li>@Html.ActionLink(CS_SKINS_ASP.Views.Shared.ResourceShared.sinscrire, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(CS_SKINS_ASP.Views.Shared.ResourceShared.seConnecter, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    }
</ul>
