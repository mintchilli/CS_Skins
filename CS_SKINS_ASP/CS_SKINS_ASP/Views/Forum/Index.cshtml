@model IEnumerable<CS_SKINS_ASP.Models.ForumViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Auteur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dernier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NbrPublications)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Auteur)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dernier)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NbrPublications)
        </td>
        <td>
            @if (User.IsInRole("Administrateur"))
            {
                Html.ActionLink("Edit", "Edit", new { id = item.Id });
                Html.ActionLink("Details", "Details", new { id = item.Id });
                Html.ActionLink("Delete", "Delete", new { id = item.Id });
            }
        </td>
    </tr>
}

</table>
