@model IEnumerable<CS_SKINS_ASP.Models.Sujet>

@{
    ViewBag.Title = "Index";
}
<div class="couche textfont">

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dernier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombrePosts)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Auteur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dernier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombrePosts)
                </td>
                <td>
                    @if (User.IsInRole("Administrateur"))
                    {
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })<br />
                            @Html.ActionLink("Details", "Details", new { id = item.Id })<br />
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })<br />
                        </p>
                    }
                    @Html.ActionLink("voir les posts", "Index", "Posts", new { id = item.Id }, new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>